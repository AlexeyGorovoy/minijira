<?xml version="1.0" encoding="UTF-8"?>
 <persistence
                    version="2.0"
                    xmlns="http://java.sun.com/xml/ns/persistence"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="minijira">
        <jta-data-source>jdbc/minijira_ds</jta-data-source>

        <class>ejb.database.model.Comment</class>
        <class>ejb.database.model.Customer</class>
        <class>ejb.database.model.CustomerAgent</class>
        <class>ejb.database.model.Developer</class>
        <class>ejb.database.model.Employee</class>
        <class>ejb.database.model.Manager</class>
        <class>ejb.database.model.ManagerType</class>
        <class>ejb.database.model.Office</class>
        <class>ejb.database.model.Priority</class>
        <class>ejb.database.model.Project</class>
        <class>ejb.database.model.ProjectType</class>
        <class>ejb.database.model.Rank</class>
        <class>ejb.database.model.Task</class>
        <class>ejb.database.model.Tech</class>
        <class>ejb.database.model.Tester</class>
        <class>ejb.database.model.TestType</class>
        <class>ejb.database.model.Workflow</class>

        <properties>
           <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
           <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/minijira" />
           <property name="javax.persistence.jdbc.user" value="root" />
           <property name="javax.persistence.jdbc.password" value="rootpass" />
        </properties>
    </persistence-unit>
</persistence>